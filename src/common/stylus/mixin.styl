bottom-border-1px($color)
  position relative
  &::before
    content ''
    display block
    position absolute
    bottom 0
    left 0
    right 0
    z-index 200
    width 100%
    height 1px
    background $color
    transform scaleY(0.5)
top-border-1px($color)
  position relative
  &::before
    content ''
    display block
    position absolute
    top 0
    left 0
    right 0
    z-index 200px
    width 100%
    height 1px
    background $color
    transform scaleY(0.5)
