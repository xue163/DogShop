bottom-border-1px($color)
  position relative
  &::before
    content ''
    display block
    position absolute
    bottom 0
    left 0
    right 0
    z-index 200
    width 100%
    height 1px
    background $color
    transform scaleY(0.5)
top-border-1px($color)
  position relative
  &::before
    content ''
    display block
    position absolute
    top 0
    left 0
    right 0
    z-index 200px
    width 100%
    height 1px
    background $color
    transform scaleY(0.5)
//    input表单
  input-text($url)
    .putong-top
      width 90%
      height 46px
      margin  5px auto
      line-height 46px
      border-bottom 1px solid #e2e2e2
      padding-left 10px
      >input
        outline none
      &>.icon1
        background-image url("./image/"+$url+".png")
        background-repeat no-repeat
        background-size 100%
        width 17px
        height 21px
        display inline-block
        vertical-align middle
        margin-right 5px
